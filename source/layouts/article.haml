%html{ lang: "en" }
  = partial "partials/head"
  %body{ class: page_classes }
    %header.project-header{ style: "background-color: #{current_article.data.color}" }
      %h2.project-title
        = current_article.title
        %time.project-title__date= current_article.date.strftime("%Y")
      %p.project-details= current_article.tags.join(', ')
    %main{ role: "main" }
      .container
        = yield
